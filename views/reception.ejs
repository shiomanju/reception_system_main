<!DOCTYPE html>
<html lang="ja">

<head>
  <meta charset="UTF-8">
  <title>受付</title>
  <script type="text/javascript" src="/socket.io/socket.io.js"></script>
</head>

<body>
  <div class="container">
    <div class="hedder">受付</div>
    <div class="buttons">
      <% for( let i=1; i < 13; i++ ) { %>
        <button onclick="on(<%= i %>);">診察室<span style="font-size:2em;">
            <%= i %>
          </span></button>
        <% } %>
          <button class="op">オペ室</button>
          <button class="space"></button>
          <button class="space"></button>
          <button class="can">取り消し</button>
    </div>
    <div class="log" id="correctLog"></div>
  </div>
  <!--<button onclick="recover()">プリンター再始動</button>-->



  <script>
    var socket = io.connect();
    //追加ボタン押された時の処理
    function on(i) {
      socket.emit('add', { room: '診察室' + i })
      confirm('追加しました')
    }
    //画面起動時の処理
    window.onload = function () {
      socket.emit('reqList', {});
    }
  </script>
  <%-include('epos')%>
    <%-include('print')%>
      <%-include('correctLog')%>
        <%- include('design') %>
          <style>
            .container {
              grid-template-columns: 70% 30%;
              grid-template-rows: 14% 81%;

            }

            .hedder {
              grid-column: 1/3;
            }

            .buttons {
              background: rgb(162, 196, 255);
              background: radial-gradient(circle, rgba(162, 196, 255, 1) 0%, rgba(255, 255, 255, 1) 57%, rgba(255, 255, 255, 1) 100%);
            }

            button {
              width: 20%;
              height: 18%;
              margin: 2%;
            }

            .space {
              visibility: collapse;
            }

            .op {
              background: rgb(183, 183, 183);
              background: linear-gradient(360deg,#50E6C3 0%, #F8F8F8 43%, rgba(255, 255, 255, 1) 100%);
            }

            .can{
              width: 15%;
              height: 8%;
            }
          </style>
</body>

</html>